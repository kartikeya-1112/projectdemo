pipeline {
    agent any

    stages {
        environment {
        GIT_CREDENTIALS_ID = 'my-credentials'
        JAVA_HOME = '/usr/lib/jvm/java-17-openjdk-amd64/bin/java'  // Replace with your actual JAVA_HOME path
        PATH = "/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/usr/local/games:/snap/bin"  // Prepend JAVA_HOME/bin to PATH
    }

        stage('Checkout') {
            steps {
                // Checkout the code from the repository
                git branch: 'main', credentialsId: 'my-credentials', url: 'https://github.com/kartikeya-1112/projectdemo'
            }
        }
        
        stage('Build') {
            steps {
                // Compile the Java program
                sh 'javac HelloWorld.java'
            }
        }

        stage('Run') {
            steps {
                // Run the Java program
                sh 'java HelloWorld'
            }
        }
    }
    

    post {
        success {
            echo 'Build and Run completed successfully!'
            archiveArtifacts artifacts: 'HelloWorld.class', onlyIfSuccessful: true
        }
        failure {
            echo 'Build or Run failed.'
        }
    }
}
